generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("MYSQL_URL")
}

model attendance {
  attendance_id Int       @default(autoincrement()) @id
  check_in      Int?
  course_id     String
  date          DateTime?
  student_id    String
  time          DateTime?
}

model course {
  course_id      String        @id
  course_name    String?
  num_of_student Int?
  program_id     program?
  enrollment     enrollment[]
  instructing    instructing[]

  @@index([program_id], name: "program_id")
}

model enrollment {
  enrollment_id Int     @default(autoincrement()) @id
  course_id     course
  student_id    student

  @@index([course_id], name: "course_id")
  @@index([student_id], name: "student_id")
}

model faculty {
  email       String        @unique
  faculty_id  String        @id
  first_name  String?
  last_name   String?
  password    String
  status      String?
  program_id  program?
  instructing instructing[]

  @@index([program_id], name: "program_id")
}

model instructing {
  instructing_id Int     @default(autoincrement()) @id
  course_id      course
  faculty_id     faculty

  @@index([course_id], name: "course_id")
  @@index([faculty_id], name: "faculty_id")
}

model program {
  program_id   String    @id
  program_name String?
  course       course[]
  faculty      faculty[]
  student      student[]
}

model student {
  email      String       @unique
  first_name String?
  last_name  String?
  password   String
  status     String?
  student_id String       @id
  program_id program?
  enrollment enrollment[]

  @@index([program_id], name: "program_id")
}